{
  "version": 2,
  "builds": [
    {
      "src": "thermalcalc-project/src/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "thermalcalc-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "thermalcalc-project/src/main.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/thermalcalc-frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/thermalcalc-frontend/dist/index.html"
    }
  ]
}